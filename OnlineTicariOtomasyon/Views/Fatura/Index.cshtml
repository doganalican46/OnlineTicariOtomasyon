@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Faturalar</h2>
<br />


<table class="table table-bordered " style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>SERİ NO</th>
        <th>SIRA NO</th>
        <th>VERGİ DAİRESİ</th>
        <th>TARİH</th>
        <th>SAAT</th>

        <th>TESLİM EDEN</th>
        <th>TESLİM ALAN</th>
        <th>TOPLAM</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.FaturaID</td>
    <td>@k.FaturaSeriNo</td>
    <td>@k.FaturaSiraNo</td>
    <td>@k.VergiDairesi</td>
    <td>@k.Tarih</td>
    <td>@k.Saat</td>
    <td>@k.TeslimEden</td>
    <td>@k.TeslimAlan</td>
    <td>@k.Toplam</td>
    <td>
        <a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-success">Güncelle</a>
        <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-info">Detay</a>
    </td>
</tr>
    }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-primary">Fatura Ekle</a>