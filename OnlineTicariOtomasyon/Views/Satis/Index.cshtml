@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Satışlar</h1>
<br />

<table id="SatislarTable" class="table table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>URUN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM TUTAR</th>
            <th>TARİH</th>
            <th>İŞLEMLER</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.SatisID</td>
                <td>@k.Urun.UrunAd</td>
                <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                <td>@k.Adet</td>
                <td>@k.Fiyat</td>
                <td>@k.ToplamTutar</td>
                <td>@k.Tarih</td>
                <td>
                    <a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-success">Güncelle</a>
                    <a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-info">Satış Detay</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

