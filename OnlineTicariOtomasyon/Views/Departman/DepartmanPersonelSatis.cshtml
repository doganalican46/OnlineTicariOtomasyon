@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satış</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Personel Adı: @ViewBag.p </li>
</ol>

<table class="table table-hover">
    <tr>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>İŞLEMLER</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Urun.UrunAd</td>
    <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
    <td>@x.Adet</td>
    <td>@x.Fiyat ₺</td>
    <td>@x.ToplamTutar</td>
    <td>@x.Tarih</td>
    <td><a class="btn btn-success" href="#">Yazdır</a></td>

</tr>
    }


</table>