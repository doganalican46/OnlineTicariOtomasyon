@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Departmanlar</h2>

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>DEPARTMAN AD</th>
        <th>İŞLEMLER</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.DepartmanID</td>
            <td>@k.DepartmanAd</td>
            <td>
                <a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">Sil</a>
                <a href="/Departman/DepartmanGetir/@k.DepartmanID" class="btn btn-success">Güncelle</a>
                <a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-info">Detay</a>
            </td>
        </tr>
    }
</table>

<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>

